<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragment.DirectionFragment">
    <TextView
            android:text="Choose direction!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/beforehand"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" android:layout_below="@+id/beforehand">
        <LinearLayout
                android:id="@+id/ll_departures"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
